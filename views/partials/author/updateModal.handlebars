<!-- Update a Masterpiece Modal -->
<div class="modal fade" id="updateModal" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Would you like to edit this
                    masterpiece?
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="fas fa-times-circle"></i>
                </button>
            </div>
            <div class="modal-body">
                Take your time and make sure that your writing makes you happy first.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">No <i
                        class="far fa-times-circle fa-lg"></i></button>
                <button type="button" class="btn btn-success yesUpdate" data-dismiss="modal">Yes <i
                        class="far fa-check-circle fa-lg"></i></i></button>
            </div>
        </div>
    </div>
</div>